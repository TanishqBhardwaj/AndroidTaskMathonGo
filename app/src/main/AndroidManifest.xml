<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.androidtask_mathongo">

    <application
        android:allowBackup="true"
        android:fullBackupOnly="true"
        android:icon="@drawable/ic_mathon_go_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_mathon_go_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidTaskMathonGo">
        <activity
            android:name=".activity.OptionActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activity.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>